def option1(amount, days):
   return amount*days

def option2(amount,days):
   i = 1
   pay = 0
   while i <= days:
       pay = pay + amount
       amount = amount*2
       i = i + 1
   return pay


print ("Option 1 pays $", end="")
print (option1(100.0,10))
print ("Option 2 pays $", end="")
print (option2(1.0,10))

if option1(100,10) > option2(1,10):
   print ("Option 1 is better.")
else:
   print ("Option 2 is better.")